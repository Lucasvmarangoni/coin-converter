
{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>../src/$1",
    "@src": "<rootDir>../src"
  }
}
